*
  border 0
  margin 0
  outline 0
  padding 0

  &
  &:after
  &:before
    box-sizing border-box
    font inherit

html
  font-size 62.5%

  @media (min-width: 600px)
    font-size 65.625%

  @media (min-width: 900px)
    font-size 68.75%

body
  background-color $dark-color
  color $text-color
  font-family 'Roboto',sans-serif
  font-size 1.6rem
  font-weight 300
  line-height 1.2
