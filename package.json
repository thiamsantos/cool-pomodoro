{
  "name": "cool-pomodoro",
  "version": "1.2.0",
  "description": "Pomodoro timer built with cool libraries",
  "scripts": {
    "deploy": "npm run build && cd build && git init && git add . && git commit -am \"Deploy\" && git push --force https://github.com/thiamsantos/cool-pomodoro.git master:gh-pages && cd ..",
    "test": "tape -r babel-register app/**/*.test.js",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "watch:test": "tape-watch -r babel-register app/**/*.test.js",
    "lint": "xo app/**/*.js",
    "precommit": "npm test && npm run lint",
    "prepush": "npm run precommit",
    "clean:build": "shx rm -rf build",
    "build:folders": "shx mkdir -p build",
    "build:static": "shx cp -r static/* build",
    "build:js": "rollup -c config/rollup.config.js --environment NODE_ENV:production",
    "build": "run-s clean:build build:folders build:static build:js",
    "watch:js": "rollup -c config/rollup.config.js -w",
    "server": "browser-sync start -s build",
    "watch:server": "npm run server -- --files \"build/**/*\"",
    "watch": "run-s clean:build build:folders build:static && run-p watch:js watch:test watch:server",
    "start": "run-s build server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/cool-pomodoro.git"
  },
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/cool-pomodoro/issues"
  },
  "nyc": {
    "include": [
      "app/components/**/*.js",
      "app/services/**/*.js"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "new-cap": 0,
      "no-new": 0
    },
    "space": true,
    "semicolon": false
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "sourceMaps": "inline"
  },
  "homepage": "https://github.com/thiamsantos/cool-pomodoro#readme",
  "devDependencies": {
    "aphrodite": "^1.2.0",
    "babel-core": "^6.21.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "bel": "^4.5.1",
    "browser-env": "^2.0.19",
    "browser-sync": "^2.18.6",
    "css-color-function": "^1.3.0",
    "husky": "^0.13.1",
    "morphdom": "^2.3.1",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.0.0",
    "redux": "^3.6.0",
    "rollup": "^0.41.5",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "shx": "^0.2.2",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4",
    "xo": "^0.17.1"
  }
}
