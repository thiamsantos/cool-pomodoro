{
  "name": "cool-pomodoro",
  "version": "1.0.0",
  "description": "Pomodoro timer built with cool libraries",
  "scripts": {
    "deploy": "npm run build && cd build && git add . && git commit -am \"Deploy\" && git push --force https://github.com/thiamsantos/cool-pomodoro.git master:gh-pages && cd ..",
    "test": "tape -r babel-register -r ignore-styles app/**/*.test.js",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "watch:test": "tape-watch -r babel-register -r ignore-styles app/**/*.test.js",
    "lint:js": "xo app/**/*.js",
    "lint:css": "stylelint \"app/**/*.css\" --config config/stylelint.config.js",
    "lint": "npm run lint:js && npm run lint:css",
    "precommit": "npm test && npm run lint",
    "prepush": "npm run precommit",
    "clean:build": "shx rm -rf build",
    "build:folders": "shx mkdir -p build/assets",
    "build:static": "shx cp -r static/* build",
    "build:js": "webpack --config config/webpack.production.config.js",
    "build": "run-s clean:build build:folders build:static build:js",
    "watch:js": "webpack --config config/webpack.development.config.js --watch --colors",
    "server": "browser-sync start -s build",
    "watch:server": "npm run server -- --files \"build/**/*\"",
    "watch": "run-s clean:build build:folders build:static && run-p watch:js watch:test watch:server",
    "start": "run-s build server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/cool-pomodoro.git"
  },
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/cool-pomodoro/issues"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "new-cap": 0,
      "no-new": 0
    },
    "space": true,
    "semicolon": false
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ],
    "sourceMaps": "inline"
  },
  "homepage": "https://github.com/thiamsantos/cool-pomodoro#readme",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "bel": "^4.5.1",
    "browser-env": "^2.0.19",
    "browser-sync": "^2.18.6",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "husky": "^0.13.1",
    "ignore-styles": "^5.0.1",
    "morphdom": "^2.3.1",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.0.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-loader": "^1.2.2",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "rollup-watch": "^3.2.2",
    "shx": "^0.2.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.1",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4",
    "webpack": "^1.14.0",
    "xo": "^0.17.1"
  }
}
